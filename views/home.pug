include _songCard

doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet' href='css/d-tunes.css')
        link(rel='stylesheet' href='css/home.css')
        title D-Tunes
    body
        header
            include _header
        main.cat
            h2.cat__heading Browse Through
            .cat__container
                .cat__card
                    img.cat__card--img(src='img/static/album.svg' alt='')
                    h3.cat__card--text ALBUM
                .cat__card
                    img.cat__card--img(src='img/static/playlist.svg' alt='')
                    h3.cat__card--text PLAYLIST
                .cat__card
                    img.cat__card--img(src='img/static/language.svg' alt='')
                    h3.cat__card--text LANGUAGE
            section.main__bg
                img.main__bg--img(src='img/static/music temp.svg' alt='')
        hr
        .song
            .song__header Top Picks . . Just for you,
            .song__container
                 for song in songs
                    +songCard(song)
        footer
            include _footer