mixin playlistCard(playlist)
    - const min =String(Math.trunc(playlist.duration/60)).padStart(2,'0')
    - const sec = String(Math.trunc(playlist.duration) % 60).padStart(2, '0')
    - let duration = `${min}:${sec}`
    - let title = playlist.name
    - if (playlist.name.length > 15) title = playlist.name.slice(0, 15) + `...`;
    a(href=`/playlist/${playlist._id}`)
        .song__card
            img.song__card--img(src=`/api/v1/songs/${playlist.songs[0]}/image` alt='playlist img')
            .song__meta
                h3.song__card--title= title
                p.song__card--duration= duration
                h5.song__card--artist= `${playlist.songs.length} songs`